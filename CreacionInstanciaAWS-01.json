{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Infraestructura segura y escalable: VPC + Subred pública + EC2 con IP pública + MySQL RDS en subred privada.",
    "Parameters": {
        "DBInstanceIdentifier": {
            "Type": "String",
            "Default": "proyecto-mysql-db",
            "Description": "Identificador para la instancia de base de datos MySQL."
        },
        "DBUsername": {
            "Type": "String",
            "Description": "Nombre de usuario maestro para la base de datos RDS.",
            "NoEcho": true
        },
        "DBPassword": {
            "Type": "String",
            "Description": "Contraseña maestra para la base de datos RDS (mínimo 8 caracteres).",
            "MinLength": 8,
            "NoEcho": true
        },
        "KeyName": {
            "Type": "AWS::EC2::KeyPair::KeyName",
            "Description": "Nombre de un par de claves EC2 existente para acceso SSH a la instancia EC2."
        },
        "EC2InstanceType": {
            "Type": "String",
            "Default": "t2.micro",
            "Description": "Tipo de instancia EC2 para el servidor web."
        }
    },
    "Resources": {
        "MiVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "EnableDnsSupport": true,
                "EnableDnsHostnames": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "VPC-Group5"
                    }
                ]
            }
        },
        "SubredPublica": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "CidrBlock": "10.0.1.0/24",
                "AvailabilityZone": {
                    "Fn::Select": [
                        0,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "MapPublicIpOnLaunch": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SubredPublica-AZ1"
                    }
                ]
            }
        },
        "SubredPublica2": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "CidrBlock": "10.0.2.0/24",
                "AvailabilityZone": {
                    "Fn::Select": [
                        1,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "MapPublicIpOnLaunch": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SubredPublica-AZ2"
                    }
                ]
            }
        },
        "SubredPrivada1": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "CidrBlock": "10.0.10.0/24",
                "AvailabilityZone": {
                    "Fn::Select": [
                        0,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SubredPrivada-AZ1"
                    }
                ]
            }
        },
        "SubredPrivada2": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "CidrBlock": "10.0.11.0/24",
                "AvailabilityZone": {
                    "Fn::Select": [
                        1,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SubredPrivada-AZ2"
                    }
                ]
            }
        },
        "InternetGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "IGW-Group5"
                    }
                ]
            }
        },
        "VPCGatewayAttachment": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "InternetGatewayId": {
                    "Ref": "InternetGateway"
                }
            }
        },
        "EIPNatGateway": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "Domain": "vpc"
            }
        },
        "NatGateway": {
            "Type": "AWS::EC2::NatGateway",
            "Properties": {
                "AllocationId": {
                    "Fn::GetAtt": [
                        "EIPNatGateway",
                        "AllocationId"
                    ]
                },
                "SubnetId": {
                    "Ref": "SubredPublica"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "NATGateway"
                    }
                ]
            }
        },
        "TablaRutasPublica": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "TablaRutasPublica"
                    }
                ]
            }
        },
        "RutaInternet": {
            "Type": "AWS::EC2::Route",
            "DependsOn": "VPCGatewayAttachment",
            "Properties": {
                "RouteTableId": {
                    "Ref": "TablaRutasPublica"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "InternetGateway"
                }
            }
        },
        "AsociacionSubredPublica1": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubredPublica"
                },
                "RouteTableId": {
                    "Ref": "TablaRutasPublica"
                }
            }
        },
        "AsociacionSubredPublica2": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubredPublica2"
                },
                "RouteTableId": {
                    "Ref": "TablaRutasPublica"
                }
            }
        },
        "TablaRutasPrivada": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "TablaRutasPrivada"
                    }
                ]
            }
        },
        "RutaNatGateway": {
            "Type": "AWS::EC2::Route",
            "DependsOn": "NatGateway",
            "Properties": {
                "RouteTableId": {
                    "Ref": "TablaRutasPrivada"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "NatGatewayId": {
                    "Ref": "NatGateway"
                }
            }
        },
        "AsociacionSubredPrivada1": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubredPrivada1"
                },
                "RouteTableId": {
                    "Ref": "TablaRutasPrivada"
                }
            }
        },
        "AsociacionSubredPrivada2": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubredPrivada2"
                },
                "RouteTableId": {
                    "Ref": "TablaRutasPrivada"
                }
            }
        },
        "GrupoSeguridadWeb": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupName": "Web-SG-Group5",
                "GroupDescription": "Permitir HTTP y SSH desde cualquier lugar",
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 443,
                        "ToPort": 443,
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Web-SG-Group5"
                    }
                ]
            }
        },
        "GrupoSeguridadDB": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupName": "DB-SG-Group5",
                "GroupDescription": "Permitir acceso a MySQL solo desde el Security Group del Servidor Web",
                "VpcId": {
                    "Ref": "MiVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 3306,
                        "ToPort": 3306,
                        "SourceSecurityGroupId": {
                            "Fn::GetAtt": [
                                "GrupoSeguridadWeb",
                                "GroupId"
                            ]
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "DB-SG-Group4"
                    }
                ]
            }
        },
        "DBSubnetGroup": {
            "Type": "AWS::RDS::DBSubnetGroup",
            "Properties": {
                "DBSubnetGroupDescription": "Grupo de subredes para la base de datos MySQL en subredes privadas.",
                "SubnetIds": [
                    {
                        "Ref": "SubredPrivada1"
                    },
                    {
                        "Ref": "SubredPrivada2"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "DBSubnetGroup"
                    }
                ]
            }
        },
        "RDSInstance": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "DBInstanceIdentifier": {
                    "Ref": "DBInstanceIdentifier"
                },
                "Engine": "mysql",
                "DBInstanceClass": "db.t2.micro",
                "AllocatedStorage": 20,
                "MasterUsername": {
                    "Ref": "DBUsername"
                },
                "MasterUserPassword": {
                    "Ref": "DBPassword"
                },
                "VPCSecurityGroups": [
                    {
                        "Fn::GetAtt": [
                            "GrupoSeguridadDB",
                            "GroupId"
                        ]
                    }
                ],
                "DBSubnetGroupName": {
                    "Ref": "DBSubnetGroup"
                },
                "PubliclyAccessible": false,
                "MultiAZ": false,
                "StorageType": "gp2",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "RDS-MySQL-Instance"
                    }
                ]
            }
        },
        "InstanciaWeb": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-016e142ef19d43e7f",
                "InstanceType": {
                    "Ref": "EC2InstanceType"
                },
                "KeyName": {
                    "Ref": "KeyName"
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": true,
                        "DeviceIndex": "0",
                        "SubnetId": {
                            "Ref": "SubredPublica"
                        },
                        "GroupSet": [
                            {
                                "Ref": "GrupoSeguridadWeb"
                            }
                        ]
                    }
                ],
                "UserData": {
                    "Fn::Base64": "#!/bin/bash\nyum update -y\nyum install -y httpd\nsystemctl start httpd\nsystemctl enable httpd\necho \"<h1>¡Mi Aplicación Web funciona!</h1><p>Conectada a una base de datos segura.</p>\" > /var/www/html/index.html"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ServidorWeb"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "VPCId": {
            "Description": "El ID de la VPC creada.",
            "Value": {
                "Ref": "MiVPC"
            }
        },
        "PublicSubnet1Id": {
            "Description": "El ID de la primera subred pública.",
            "Value": {
                "Ref": "SubredPublica"
            }
        },
        "PrivateSubnet1Id": {
            "Description": "El ID de la primera subred privada.",
            "Value": {
                "Ref": "SubredPrivada1"
            }
        },
        "WebServerPublicIP": {
            "Description": "La IP pública del Servidor Web.",
            "Value": {
                "Fn::GetAtt": [
                    "InstanciaWeb",
                    "PublicIp"
                ]
            }
        },
        "WebServerPublicDNS": {
            "Description": "El DNS público del Servidor Web.",
            "Value": {
                "Fn::GetAtt": [
                    "InstanciaWeb",
                    "PublicDnsName"
                ]
            }
        },
        "RDSInstanceEndpoint": {
            "Description": "El Endpoint (dirección) de la instancia de base de datos MySQL.",
            "Value": {
                "Fn::GetAtt": [
                    "RDSInstance",
                    "Endpoint.Address"
                ]
            }
        },
        "RDSInstancePort": {
            "Description": "El puerto de la instancia de base de datos MySQL.",
            "Value": {
                "Fn::GetAtt": [
                    "RDSInstance",
                    "Endpoint.Port"
                ]
            }
        }
    }
}